<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gv_exercise_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="16dp"
        android:src="@drawable/gif_benchpress_150x150" />

    <TextView
        android:id="@+id/gv_exercise_name"
        android:layout_width="256dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/gv_exercise_image"
        android:layout_toLeftOf="@+id/gv_exercise_image"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="gv_exercise_name"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/gv_exercise_image"
        android:layout_marginTop="-150dp"
        android:background="@color/color_darkgreen"></View>

</RelativeLayout>