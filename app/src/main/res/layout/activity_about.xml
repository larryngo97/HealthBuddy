<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_header_classtitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_green"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="header_class_title"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/about_header_groupnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_header_classtitle"
        android:layout_marginTop="-45dp"
        android:background="@color/color_green"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="header_class_group"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/about_body_authors"
        android:textStyle="bold"
        android:layout_width="251dp"
        android:layout_height="441dp"
        android:layout_below="@+id/about_header_classtitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="body_authors"
        android:textSize="24sp" />
</RelativeLayout>